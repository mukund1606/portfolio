---
import SliderLink from "./SliderLink.astro";
const { post } = Astro.props;
---

<div
  class="w-full text-center p-4 border rounded-xl space-y-4 duration-500 ease-linear flex flex-col items-center justify-center"
>
  <div class="h-52 flex items-center">
    <img
      src={post.frontmatter.image.url}
      alt={post.frontmatter.image.alt}
      width="300"
      height="208"
    />
  </div>
  <h1 class="text-3xl font-bold">{post.frontmatter.title}</h1>
  <p>{post.frontmatter.description.slice(0, 100)}</p>
  <div class="w-full text-right pt-6">
    <SliderLink href={post.url}>Read More...</SliderLink>
  </div>
</div>
